	body
		div.background-image
		div.parallax
			div.container
				div#Introduction.parallax_group
					div.parallax_layer.parallax_layer_base
						div.glass
						div.content
							div.col-md-12.right
								h1 Melvin & Jessica - Wedding 2015
								span
									sub #mjwed2015 #meljess2015
							div.login-content	
								div.row
									div
										form.login-form(action='/loginUser', method='post')
											div.header
												h1.login Login
												div.info
													span Please sign in to view the Melvin Cruz & Jessica Axalan wedding information.
														br
														| The username and password are provided by Melvin or Jessica
										
											div.form-content
												input.input.username(type="text" name="username" placeholder='Username')
												div.user-icon
												input.input.password(type="password" name="password" placeholder="Password")
												div.pass-icon

											div.footer
												input.button(type="submit" name="submit" value="Login")
